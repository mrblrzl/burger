<h1>Bub's Burgers</h1>
<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Uneaten </h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="btn btn-primary btn-sm devour-burger" data-id="{{this.id}}">DEVOUR!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <hr>
    <div class="container">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bu">Burger:</label>
          <input type="text" id="bu" name="name">
        </div>

        <button type="submit">Add it!</button>
      </form>
    </div>