
<div class="container">
  <div class="jumbotron">
  <h1 class="display">Bub's Burgers</h1>  
    <h3>Help us create our future menu by adding your idea below:</h3>
</div>

    <div class="col-md-4">
      <h2>Add a Burger to our menu:</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bu"> Burger:</label>
          <input type="text" id="bu" name="name">
        </div>

        <button type="submit" class="btn btn-info">Add it!</button>
      </form>
    </div>

    <div class="col-md-4" >
      <img src="/assets/css/chalkboard.jpg" class="card-body" id="menu">
  </div>

<div class="col-md-4" >
  <h2 class="card-img-top">Burgers Available: </h2>
        <ol>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="btn btn-warning btn-sm devour-burger" data-id="{{this.id}}">DEVOUR!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ol>
</div>
    <hr>
